@model IEnumerable<PrimeSimulateur.Models.Categorie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Travail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Travail.TravailId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategorieId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategorieId">Details</a> |
                <a asp-action="Simuler" asp-route-id="@item.TravailId" asp-route-type="@item.type" class="btn btn-primary">Simuler</a>   |
                <a asp-action="Delete" asp-route-id="@item.CategorieId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
